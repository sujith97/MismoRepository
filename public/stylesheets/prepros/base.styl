@import url(https://fonts.googleapis.com/css?family=Roboto:400,500,700);
@import url(https://fonts.googleapis.com/css?family=Rajdhani:400,500,600,700);

main-color = #4183D7

body
	box-sizing border-box
	.head
		background-color main-color
		width 100%
		box-shadow: 0px 2px 16px rgba(2, 2, 2, 0.73)
		display inline-block
		.logo-section
			width 20%
			font bold 1.6em/1.2 'Rajdhani', sans-serif
			color white
			position relative
			left 1%
			width 100px
			padding 0.5% 0.5% 1% 0.5%
			float left
			.bar
				height 20px
				width 60px
				background-color rgb(247, 247, 247)
			.bar:nth-child(3)
				height 50px
				width 20px
		.title
			float right
			text-align center
			font bold 3.5em/1.2 'Roboto', sans-serif
			margin-right 35%
			padding-top 3%
			color #FFFFFF
			text-shadow 2px 2px #A0A0A0;
	.content
		margin-top 1%
		padding 1%
		font 1em/1.2 'Roboto', sans-serif
		.list-group
			height 420px
			overflow scroll
			.list-group-item
				cursor pointer
.box
	background-color #F5F5F5
.selectable
	cursor pointer